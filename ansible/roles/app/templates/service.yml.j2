---
apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-web-service
spec:
  selector:
    app: {{ app_name }}-web
  ports:
    - protocol: TCP
      port: 80
      targetPort: {{ app_port}}
  type: ClusterIP

---
apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-db-service
spec:
  selector:
    app: {{ app_name }}-db
  ports:
    - protocol: TCP
      port: 5432
      targetPort: 5432
  type: ClusterIP