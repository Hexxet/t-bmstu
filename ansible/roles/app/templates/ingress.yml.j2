---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ app_name }}-ingress
spec:
  ingressClassName: nginx
  rules:
  - host: "{{ app_name }}.com"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{ app_name }}-web-service
            port:
              number: 80
